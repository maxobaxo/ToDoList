<html>
    <head>
        <title>To Do List</title>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <h1>Update the {{ category.getName }} category</h1>
            </div>
            <form action='/categories/{{ category.getId }}' method='post'>
                <input name="_method"  type="hidden" value="patch">
                
                <input id='category_id' name='category_id' type='hidden' value='{{ category.getId }}'>

                <input id='new_name' type="text" placeholder="Category: {{ category.getName }}" name="new_name">

                <button type='submit'>Edit Category</button>
            </form>
        </div>
    </body>
</html>
